FROM node:20-alpine AS base
RUN apk add --no-cache openssl
RUN npm install -g pnpm@9.0.0

# ---------- deps ----------
FROM base AS deps
WORKDIR /app

COPY pnpm-workspace.yaml ./
COPY package.json ./
COPY pnpm-lock.yaml ./
COPY packages ./packages
COPY apps/http-backned ./apps/http-backned

RUN pnpm install --no-frozen-lockfile

# ---------- builder ----------
FROM base AS builder
WORKDIR /app

COPY pnpm-workspace.yaml ./
COPY package.json ./
COPY pnpm-lock.yaml ./
COPY --from=deps /app/packages ./packages
COPY --from=deps /app/apps/http-backned ./apps/http-backned
COPY --from=deps /app/node_modules ./node_modules

# Build shared packages
WORKDIR /app/packages/db
RUN pnpm prisma generate
RUN pnpm run build

WORKDIR /app/packages/common
RUN pnpm run build

WORKDIR /app/packages/backend-common
RUN pnpm run build

# Build http-backend
WORKDIR /app/apps/http-backned
RUN pnpm run build

# ---------- runner ----------
FROM base AS runner
WORKDIR /app
ENV NODE_ENV=production

COPY pnpm-workspace.yaml ./
COPY package.json ./
COPY pnpm-lock.yaml ./
COPY --from=builder /app/packages ./packages
COPY --from=builder /app/apps/http-backned ./apps/http-backned
COPY --from=builder /app/node_modules ./node_modules

EXPOSE 8081
CMD ["pnpm", "--filter", "http-backned", "start"]
